<div class="header-outer">
    <div class="header">
        <h1>{{#link-to "index"}}<img src="images/logo.png" alt="" />{{/link-to}}</h1>
        <div class="nav">
            <a href="#" class="menu active"></a>
            <div class="dropMenu">
                <h2>Browse Categories</h2>
                <ul>
                {{#each categories}}
                    <li><a href="#">{{name}}</a>
                        <ul>
                        {{#each subcategories}}
                            <li><a href="#">{{this}}</a></li>
                        {{/each}}
                        </ul>
                    </li>
                {{/each}}
                </ul>
            </div>
        </div><!--Navigation-->
        <span class="sep"></span>
        <div class="search">
            <span>
                <select name="cate1" id="cate1" tabindex="1">
                {{#each categories}}
                    <option>{{name}}</option>
                {{/each}}
                </select>
            </span>
            <input type="text" value="Search entire site..." onclick="if (this.defaultValue==this.value) this.value=''" onblur="if (this.value=='') this.value=this.defaultValue" />
            <input type="submit" value="&nbsp;" />
        </div><!--Search Products-->
        <div class="cart">
            <span id="output">{{cart_size}}</span>
        </div><!--Cart-->
        <div class="clr"></div>
    </div>
</div>

{{outlet}}

