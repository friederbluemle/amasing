        <div class="social">
            <a href="#"><img src="images/facebook.jpg" alt="" /></a>
            <a href="#"><img src="images/twitter.jpg" alt="" /></a>
            <a href="#"><img src="images/google-plus.jpg" alt="" /></a>
            <a href="#"><img src="images/linkedin.jpg" alt="" /></a>
            <a href="#"><img src="images/mail.jpg" alt="" /></a>
            <a href="#"><img src="images/rss.jpg" alt="" /></a>
        </div>
        <div class="clr"></div>
    </div>
</div>

<div class="cart-pop">
    <h6><span>My Cart</span></h6>
    <div class="product-scroll">
        <ul>
        {{#each cart_items}}
            <li class="li">
                <div class="col1">
                    <div class="imgBx">
                        <img src="images/{{unbound image}}" alt="" />
                    </div>
                    <span class="del">DELETE</span>
                </div>
                <h5>{{name}}</h5>
                <div class="col2">
                    <b>{{price}}</b>
                    <span>{{weight}}</span>
                    <small>QTY</small>
                    <select>
                        <option>{{quantity}}</option>
                    </select>
                </div>
                <div class="clr"></div>
            </li>
        {{/each}}
        </ul>
        <script type="text/javascript">
            $('.del').on('click', function(){
                $(this).closest('li').fadeOut('slow');
            });
        </script>
    </div><!--Scroller-->
    <div class="cartInfo">
        <div class="gryBx">
            <div class="info">
                <b>Total Cart Value:</b>
                <strong>$270.00</strong>
                <div class="clr"></div>
            </div>
            <div class="info">
                <b><img src="images/red-dot.png" alt="" /> Cart Weight:</b>
                <strong class="grn">20 lbs</strong>
                <div class="clr"></div>
            </div>
        </div>
        <div class="amazonBx">
            <ul>
                <li>Cart too heavy</li>
                <li>Min spend not met</li>
                <li>Cart > 400 SGD</li>
            </ul>
            <img src="images/amazon-btn.png" alt="" class="right" />
            <div class="clr"></div>
        </div>
        <div class="value-slider" id="line-slider1">
            <input class="js-step1" type="text">  
            <div id="js-display-decimal1" class="display-box"></div>
        </div>
        <div class="value-slider" id="line-slider2">
            <input class="js-step2" type="text">
            <div id="js-display-decimal2" class="display-box"></div> 
        </div>
        <div class="attention">
            <div class="att">
                <h5>Attention !</h5>
                <ul>
                    <li>Cart weight becomes over 20 lbs by adding products</li>
                    <li>Cart total volume becomes over SGD 320</li>
                </ul>
            </div>
        </div><!--/Attention-->
    </div>
    <div class="clr"></div>
</div>
