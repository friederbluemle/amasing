<div class="wrapper">
    <div class="brdcrb">
        <a href="#" class="back">Back to Home &amp; Garden</a>
    </div><!--/Bread Crumb-->
    <div class="product-preview">
        <img id="{{unbound main_image.id}}" src="{{unbound main_image.src}}" data-zoom-image="{{unbound main_image.data_zoom_image}}" class="prv"/>
        <div id="gallery_01">
{{#each gallery_items}}
            <a href="#" data-image="{{unbound data_image}}" data-zoom-image="{{unbound data_zoom_image}}">
                <span><img id="{{unbound id}}" src="{{unbound src}}" /></span>
            </a>
{{/each}}
            <span class="zoom">Click to Zoom</span>
        </div>
        <div class="clr"></div>
    </div><!--Product Preview-->
    <div class="product-content">
        <h2>{{title}}</h2>
        <div class="meta">
            <span class="author">By <a href="#">{{author}}</a></span>
            <div class="rate">
                <div class="star">
                    <div id="default-demo"></div>
                    <small>{{reviews.total}} reviews</small>
                </div>
            </div>
            <div class="share">
<!-- AddThis Button BEGIN -->
<div class="addthis_toolbox addthis_default_style">
<a class="addthis_button_facebook_like" fb:like:layout="button_count"></a>
<a class="addthis_button_tweet"></a>
<a class="addthis_button_google_plusone" g:plusone:size="medium"></a>
</div>
<script type="text/javascript">var addthis_config = {"data_track_addressbar":true};</script>
<script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-53706e6c4cdeffbe"></script>
<!-- AddThis Button END -->
            </div>
            <div class="clr"></div>
        </div><!--Meta-->
        <div class="shipping">
            <b>Price: <big>{{price}}</big></b>
            <small>Status : {{status}}</small>
            <span class="sep"></span>
            <span class="free">FREE Shipping on orders over $35</span>
            <div class="clr"></div>
        </div>
        <ul class="list1">
{{#each description_lines}}
            <li>{{this}}</li>
{{/each}}
        </ul>
        <div class="sizeBx">
            <ul class="sizeTab">
{{#each variants}}
                <li><a href="#">{{this}}</a></li>
{{/each}}
            </ul>
            <div class="clr"></div>
            <div class="sizeInfo">
                <div class="tabC">
                    <div class="qty-cart">
                        <label>Quantity:</label>
                        <select>
                            <option>12</option>
                        </select>
                        <div class="clr"></div>
                        <a href="#">Add To My Cart</a>
                    </div>
                    <div class="cartShip">
                        <ul>
                            <li><span>Your Cart is too heavy for FREE Shipping, max weight less than 20 lbs</span></li>
                            <li><span>Your Cart is now subject to Import Duty, make it less than SGD 320</span></li>
                        </ul>
                    </div>
                    <div class="clr"></div>
                </div>
            </div>
        </div>
    </div><!--Product Content-->
    <div class="clr"></div>
    <div class="similar-product">
        <h6>Customers Who Bought This Item Also Bought</h6>
        <ul class="bxslider">
        {{#each similar_products}}
            <li>
                <div class="prod">
                    <a href="#"><img src="{{unbound image}}" alt="" /></a>
                </div>
                <div class="gry">
                    <h3>{{title}}</h3>
                    <b>{{price}}</b>
                </div>
            </li>
        {{/each}}
        </ul>
        <div class="clr"></div>
    </div><!--Similar Product-->
    <div class="footage">
        <div class="fBox">
            <h2>Navigate</h2>
            <ul>
                <li><a href="#">Search Product</a></li>
                <li><a href="#">Best Seller</a></li>
                <li><a href="#">Browse Category</a></li>
            </ul>
        </div><!--Footer Menu Box-->
        <div class="fBox">
            <h2>Support</h2>
            <ul>
                <li><a href="#">Customer Support</a></li>
                <li><a href="#">FAQ/Help</a></li>
                <li><a href="#">Contact Us</a></li>
            </ul>
        </div><!--Footer Menu Box-->
        <div class="footer-hide"></div>
        <div class="fBox">
            <h2>Shopping</h2>
            <ul>
                <li><a href="#">Return Policy</a></li>
                <li><a href="#">Shipping Info</a></li>
                <li><a href="#">Payment &amp; Security</a></li>
            </ul>
        </div><!--Footer Menu Box-->
        <div class="fBox">
            <h2>Account</h2>
            <ul>
                <li><a href="#">My Cart</a></li>
                <li><a href="#">Order History</a></li>
                <li><a href="#">Wish List</a></li>
            </ul>
        </div><!--Footer Menu Box-->
        <div class="clr"></div>
        <ul class="fnav">
            <li><a href="#">Navigate</a></li>
            <li><a href="#">Support</a></li>
            <li><a href="#">Shopping</a></li>
            <li><a href="#">Account</a></li>
        </ul>
    </div><!--/Footage-->
</div>
